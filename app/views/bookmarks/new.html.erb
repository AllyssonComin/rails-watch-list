<div class="container my-5">
  <h1 class="text-center"> Add new movie to the <%= @list.name %> list</h1>
  <div class="w-50 m-auto">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= f.button :submit, class:'btn btn-success'%>
    <% end %>
  </div>
</div>
