<div class="container my-5 ">
  <h1 class="text-center">All lists</h1>
  <div class="w-50 m-auto d-flex justify-content-between ">
    <% @lists.each do |list| %>
      <h3><%= list.name %></h3>

     <%= link_to 'Details',  list_path(list), class: "btn btn-primary "%>
      <%= link_to "Delete",
                          list_path(list), class:"btn btn-danger",
                          data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure?"
                                }
      %>
    <% end %>
  </div>
</div>
